.page{
	width: 100%;
	height: 100%;
	padding: 0 20rpx;
}
.search{
	margin-top: 20rpx;
	background: #999999;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding-left: 20rpx;
	width: 94%;
	height:60rpx;
	position: fixed;
	top: 100;
	z-index: 99;
	background: #C8C7CC;
}
.search image{
	margin-right: 20rpx;
	width: 40rpx;
	height: 40rpx;
	margin-top: 12rpx;
}
.search input{
	height:60rpx;
	line-height: 60rpx;
	font-size: 16px;
}
.movieList{
	display: -webkit-box;
